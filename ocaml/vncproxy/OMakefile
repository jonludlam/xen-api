OCAML_LIBS    = ../idl/xapi-consts ../xapi-types/common ../xapi-client/client
OCAMLINCLUDES = ../xapi-types ../xapi-client 
OCAMLPACKS    = xml-light2 stdext stunnel http-svr rpclib uuid

OCamlProgram(vncproxy, vncproxy)

.PHONY: install
install:
	mkdir -p $(DESTDIR)$(OPTDIR)/debug
	$(IPROG) vncproxy $(DESTDIR)$(OPTDIR)/debug

.PHONY: sdk-install
sdk-install: install

.PHONY: clean
clean:
	rm -rf $(CLEAN_OBJS) vncproxy
